<p id="notice"><%= notice %></p>
<% if @movie.nil? %>
  <%= form_with(model: @reservation, local: true) do |form| %>
    <%= form.hidden_field :movie_id, value: @movie.id %>
    <%= form.hidden_field :date, value: @date %>
    <%= form.hidden_field :schedule_id, value: @schedule.id %>
    <%= form.hidden_field :sheet_id, value: @sheet_id %>

    <%= form.label :name, "予約者指名" %>
    <%= form.text_field :name %>
    <%= form.label :email, "予約者メールアドレス" %>
    <%= form.email_field :email %>

    <%= form.submit %>
  <% end %>
<% end %>