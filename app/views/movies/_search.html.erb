<%= form_with(url: search_movies_path, method: :get) do |form| %>
    <div class="field">
        <%= form.label :keyword %>
        <%= form.text_field :keyword, placeholder: "Search for movies" %>
    </div>
    <div class="field">
      <div class="field">
            <%= form.label :is_showing, "Search By:" %>
            <%= form.radio_button :is_showing, "10", checked: true %>
            <%= form.label :is_showing_all, "All" %>
            <%= form.radio_button :is_showing, "1" %>
            <%= form.label :is_showing_showing, "Showing" %>
            <%= form.radio_button :is_showing, "0" %>
            <%= form.label :is_showing_upcoming, "Upcoming" %>
        </div>
    </div>
    <div class="actions">
        <%= form.submit "Search" %>
    </div>
<% end %>